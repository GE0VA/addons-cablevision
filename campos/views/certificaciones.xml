            <field name="help" type="html">

              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p>
            </field>
        </record>
        <menuitem id="UNIQUE_ID_categ4" name="Certificaciones" parent="UNIQUE_ID_categ3" action="certificaciones_action_view" />
