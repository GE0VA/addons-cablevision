                <tree string="Lista de Certificaciones">
                    <field name="name"/>
                    <field name="fecha_curso"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record id="certificaciones_action_view" model="ir.actions.act_window">
            <field name="name">Certificaciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">certificacion.odoo</field>
