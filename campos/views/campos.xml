<odoo>
    <data>
       <record model="ir.ui.view" id="campos_tree_view">
      <field name="name">Lista Campos</field>
      <field name="model">campos.arbol</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="active"/>
        </tree>
      </field>
    </record>


    <record id="campos_form_view" model="ir.ui.view">
      <field name="name">Vista Formulario de Campos</field>
      <field name="model">campos.arbol</field>
      <field name="arch" type="xml">
        <form string="Campos del Sistema">
          <header>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group cols="2">
              <group cols="2">
                  <field name="titulaciones" widget="many2many_tags" options="{'color_field':'color'}"/>
                  <field name="Prueba" options="{'color_field':'color'}"/>
                <field name="name"/>
                <field name="active"/>
                <field name="date"/>
                <field name="date_time"/>
                <field name="titulo_id"/>
              </group>
              <group cols="2">
                <field name="amount"/>
                <field name="age"/>
                <field name="attachment"/>
              </group>
            </group>
            <notebook>
               <page string="Titulaciones">
                <field name="campos_odoo_id">
                   <tree string="Lineas de titulos" editable="botton"> <!--estructura one2many-->
                              <field name="titulo_id"/>
                              <field name="description"/>
                          </tree>
                </field>
              </page>
              <page string="Pagina para la Descripcion">
                <group>
                  <field name="decription"/>
                </group>
              </page>
              <page string="Otra informacion">
                <field name="html"/>
              </page>
            </notebook>


          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="campos_action_view">
      <field name="name">Accion de Campos</field>
      <field name="res_model">campos.arbol</field>
      <field name="view_mode">tree,form</field>
    </record>

