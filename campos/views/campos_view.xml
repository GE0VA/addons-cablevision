<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="campos_tree_view">
      <field name="name">Lista de campos</field>
      <field name="model">campos.odoo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <record id="campos_form_view" model="ir.ui.view">
      <field name="name">Formulario de campos</field>
      <field name="model">campos.odoo</field>
      <field name="arch" type="xml">
        <form string="esto es un formulario">
          <header>
            <button name="a_contratado" attrs="{'invisible':[('state','in',['cancelado','despedido','contratado'])]}" type="object" string="contratar" />
            <button name="a_despedido" attrs="{'invisible':[('state','in',['cancelado','despedido','borrador'])]}" type="object" string="despedir"/>
            <button name="a_cancelado" attrs="{'invisible':[('state','in',['cancelado'])]}" type="object" string="Cancelar"/>
            <field name="state" widget="statusbar"/>
          </header>
          <sheet>
            <group>
              <field name="name"/>
              <field name="active"/>
              <field name="titulo_id"/>
              <field name="certificaciones_ids"
                     widget="many2many_tags"
                     options="{'color_field': 'color'}" />
            </group>
            <group>
              <field name="vehiculos_id"/>
            </group>
            <notebook>
              <page string="Titulaciones">
                <field name="campos_odoo_ids">
                  <tree string="lineas de titulos" >
                    <field name="titulo_id"/>
                    <field name="description"/>
                  </tree>
                </field>
              </page>
              <page string="Licencias">
                <field name="licencias_ids" >
                  <tree string="lineas de Licencias" editable="bottom">
                    <field name="licencia_id"/>
                    <field name="vencimiento_date"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="campos_action_window">
      <field name="name">Accion de Campos</field>
      <field name="res_model">campos.odoo</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Tecnicos del Plantel" id="campos_menu_root"/>
    <!-- menu categories -->

    <menuitem name="Vista de campos" id="campos_menu_1" parent="campos_menu_root"/>

    <!-- actions -->

    <menuitem name="Tecnico" id="campos.menu_1_list" parent="campos_menu_1"
              action="campos_action_window"/>
  </data>
</odoo>