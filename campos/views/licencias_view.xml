<odoo>
    <data>

        <record model="ir.ui.view" id="licencias_tree_view">
            <field name="name">Lista licencias</field>
            <field name="model">licencias.odoo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>

                </tree>
            </field>
        </record>

        <record id="licencias_form_view" model="ir.ui.view">
            <field name="name">Formulario licencias</field>
            <field name="model">licencias.odoo</field>
            <field name="arch" type="xml">
                <form string="formualario licencias">
                    <sheet>
                        <group>
                            <field name="name"/>

                            <field name="descripcion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="licencias_action_window" model="ir.actions.act_window">
            <field name="name">Accion de licencias</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">licencias.odoo</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Este es el formulario de licencias
                </p>
            </field>
        </record>




        <!-- actions -->
        <menuitem name="licencias" id="campos.menu_licencias_list" parent="campos_menu_configuration"
                  action="licencias_action_window"/>

    </data>
</odoo>