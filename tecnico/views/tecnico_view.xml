<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="tecnico_tree_view">
            <field name="name">Lista del Tecnico</field>
            <field name="model">tecnico.odoo</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>

                </tree>
            </field>
        </record>

        <record id="tecnico_form_view" model="ir.ui.view">
            <field name="name">Vista formulario del tecnico</field>
            <field name="model">tecnico.odoo</field>
            <field name="arch" type="xml">
                <form string="Tecnico del Sistema">
                    <header>
                        <button name="a_contratado" attrs="{'invisible':[('state','in',['cancelado','despedido','cancelado'])]}" type="object" string="Contratado"/>
                        <button name="a_despedido" attrs="{'invisible':[('state','in',['cancelado','borrador','despedido'])]}" type="object" string="Despedido"/>
                        <button name="a_cancelado" states="cancelado,borrador,despedido" type="object" string="Cancelado"/>
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="certificacion_id"/>
                            <field name="vehiculo_id"/>
                            <field name="age"/>
                            <field name="email"/>
                            <field name="sexo"/>
                            <field name="date"/>
                            <field name="comments"/>

                        </group>
                        <notebook>
                            <page string="Licencias">
                                <field name="licencia_odoo_id">
                                    <tree string="Lineas de licencias" editable="bottom">
                                        <field name="licencia_id"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>

                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="tecnico_action_view">
            <field name="name">Accion de tecnico</field>
            <field name="res_model">tecnico.odoo</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- server action to the one above -->
        <!--
        <record model="ir.actions.server" id="tecnico.action_server">
          <field name="name">Tecnico server</field>
          <field name="model_id" ref="model_tecnico_tecnico"/>
          <field name="state">code</field>
          <field name="code">
            action = {
              "type": "ir.actions.act_window",
              "view_mode": "tree,form",
              "res_model": self._name,
            }
          </field>
        </record>
        -->

        <!-- Top menu item -->

        <menuitem name="Tecnico" id="tecnico_menu_root"/>

        <!-- menu categories -->

        <menuitem name="Menu 1" id="tecnico_menu_1" parent="tecnico_menu_root"/>
        >

        <!-- actions -->

        <menuitem name="List" id="tecnico_menu_1_list" parent="tecnico_menu_1"
                  action="tecnico_action_view"/>
        <!--
        <menuitem name="Server to list" id="tecnico" parent="tecnico.menu_2"
                  action="tecnico.action_server"/>
        -->
    </data>
</odoo>