<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="tecnico_tree_view">
      <field name="name">Lista de Tecnico</field>
      <field name="model">tecnico.odoo</field>
      <field name="arch" type="xml">


        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="tecnico_from_view" model="ir.ui.view">
      <field name="">Vista Formulario de tecnico</field>
      <field name="model">tecnico.odoo</field>
      <field name="arch" type="xml">
        <form string="tecnico en el  Sistema">
           <header>
             <button name="a_contratado" attrs="{'invisible':[('state','in',['cancelado','despedido','contratado'])]}" type="object" string="Contratado"/>
             <button name="a_despedido" attrs="{'invisible':[('state','not in',['cancelado','borrador','despedido'])]}" type="object" string="Despedido"/>
             <button name="a_cancelado" attrs="{'invisible':[('state','in',['cancelado','despedido','contratado'])]}" type="object" string="Cancelado"/>
              <field name="state" widget="statusbar" />
          </header>
          <sheet>
            <group cols="4">
              <field name="name"/>
              <field name="age"/>
              <field name="email"/>
              <field name="sexo"/>
              <field name="data"/>
              <field name="date_create"/>
              <field name="user_id"/>
              <field name="time_onbusiness"/>
              <field name="days_add"/>
              <field name="Comen"/>
              <field name="vehiculo_id" domain="[('proper_license', '=', licencias_id)]" widget="selection"/>
              <field name="licencias_id"/>
              <field name="certificaciones_ids"/>




            </group>
                    <notebook>
                 <page string="Licencias">

                  <field name="licencias_ids">
                    <tree string="Licencias" editable="bottom">

                      <field name="licencia_id"/>
                      <field name="fecha_vencimineto"/>


                    </tree>

                  </field>

                 </page>
            </notebook>

          </sheet>
               <div class="oe_chatter">

          <field name="message_follower_ids" widget="mail_followers"/>
           <field name="activity_ids" widget="mail_activity"/>
           <field name="message_ids" widget="mail_thread"/>
        </div>
        </form>


      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="tecnico_action_view">
      <field name="name">Tecnico en el sistema</field>
      <field name="res_model">tecnico.odoo</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="tecnico.action_server">
      <field name="name">tecnico server</field>
      <field name="model_id" ref="model_tecnico_tecnico"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->

    <menuitem name="Tecnico" id="tecnico_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Vista de Tecnico" id="tecnico_menu_1" parent="tecnico_menu_root"/>


    <!-- actions -->

    <menuitem name="Lista de tecnico" id="tecnico_menu_1_list" parent="tecnico_menu_1"
              action="tecnico_action_view"/>

  </data>
</odoo>